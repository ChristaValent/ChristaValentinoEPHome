<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">@Model.Title</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Poll" asp-action="Vote" method="post">
                        <input type="hidden" name="pollId" value="@Model.Id" />

                        <div class="form-check">
                            <input class="form-check-input me-2" type="radio" name="option" value="1">
                            <label class="form-check-label">@Model.Option1Text</label>
                        </div>

                        <div class ="form-check">
                            <input class="form-check-input me-2" type="radio" name="option" value="2">
                            <label class="form-check-label">@Model.Option2Text</label>
                        </div>
                        
                        <div class="form-check">
                            <input class="form-check-input me-2" type="radio" name="option" value="3">
                            <label class="form-check-label">@Model.Option3Text</label>
                        </div>

						<button type="submit" class="btn btn-primary mt-3">Vote</button>
                    </form>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">Back to Polls</a>
            </div>
        </div>
    </div>
</div>